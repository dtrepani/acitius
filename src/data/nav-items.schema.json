{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definition": "Menu items for the sidebar",
	"id": "/src/data/nav-items.json",
	"items": {
		"id": "/items",
		"properties": {
			"additionalClasses": {
				"id": "/items/properties/name",
				"type": "string"
			},
			"admin": {
				"id": "/properties/admin",
				"type": "boolean"
			},
			"icon": {
				"description": "Icon names are available from: http://fontawesome.io/icons/",
				"id": "/items/properties/icon",
				"type": "string"
			},
			"name": {
				"id": "/items/properties/name",
				"type": "string"
			},
			"subNav": {
				"id": "/properties/subnav",
				"items": {
					"id": "/properties/subnav/items",
					"type": "string"
				},
				"type": "array"
			}
		},
		"required": [
			"name",
			"icon"
		],
		"type": "object"
	},
	"type": "array"
}